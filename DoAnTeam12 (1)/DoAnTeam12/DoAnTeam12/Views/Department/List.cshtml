@model List<DoAnTeam12.Models.Department.DepartmentModel>
@{
    ViewBag.Title = "List";
}

<div class="departments-container">
    <div class="departments-list-container">
        <h2 class="departments-list-title">Departments List</h2>
        <table class="departments-table">
            <thead>
                <tr>
                    <th>Department ID</th>
                    <th>Department</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.DepartmentID</td>
                        <td>@department.DepartmentName</td>
                        <td>@department.CreatedAt</td>
                        <td>@department.UpdatedAt</td>
                        <td>
                            <a href="@Url.Action("Details", "Department", new { id = department.DepartmentID })" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i>View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
