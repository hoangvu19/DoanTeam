@model List<DoAnTeam12.Models.Employee.EmployeeModel>
@{
    ViewBag.Title = "Department Details";
}

<h2 class="title">
    Employee List in Department ID: @ViewBag.DepartmentID
</h2>

<div class="table-container">
    <table class="table-custom">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Position</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.FullName</td>
                        <td>@emp.DateOfBirth</td>
                        <td>@emp.Gender</td>
                        <td>@emp.PhoneNumber</td>
                        <td>@emp.Email</td>
                        <td>@emp.PositionName</td>
                        <td>
                            <span class="badge @(emp.Status == "Active" ? "badge-success" : "badge-danger")">
                                @emp.Status
                            </span>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No employees in this department.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="btn-container">
        <a href="@Url.Action("List", "Department")" class="btn-back">
            <i class="bi bi-arrow-left-circle"></i> Back to Department List
        </a>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<!-- Custom CSS -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 20px;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-size: 24px;
    }

    .table-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        margin: 0 auto;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
    }

        .table-custom th, .table-custom td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table-custom th {
            background-color: #007BFF;
            color: white;
        }

        .table-custom tbody tr:hover {
            background-color: #f1f1f1;
        }

    .text-center {
        text-align: center;
    }

    .btn-container {
        margin-top: 20px;
        text-align: center;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    .badge {
        padding: 4px 10px;
        border-radius: 12px;
        color: white;
        font-size: 0.85rem;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }
</style>
