@{
    ViewBag.Title = "Position List";
    var positions = ViewBag.Positions as List<DoAnTeam12.Models.Department.PositionsModel>;
}

<div class="positions-container">
    <div class="positions-list-wrapper">
        <h2 class="positions-title">Position List</h2>

        @if (positions != null && positions.Count > 0)
        {
            <table class="table table-hover positions-table">
                <thead class="table-success">
                    <tr>
                        <th>Position ID</th>
                        <th>Position Name</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pos in positions)
                    {
                        <tr>
                            <td>@pos.PositionID</td>
                            <td>@pos.PositionName</td>
                            

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning text-center mt-3" role="alert">
                No position data available.
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<style>
    .positions-container {
        display: flex;
        justify-content: center;
        padding: 30px;
    }

    .positions-list-wrapper {
        width: 85%;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    }

    .positions-title {
        text-align: center;
        margin-bottom: 20px;
        font-weight: 600;
        font-size: 24px;
        color: #28a745;
    }

    .positions-table {
        font-size: 16px;
    }

        .positions-table th {
            background-color: #28a745;
            color: white;
            text-align: center;
        }

        .positions-table td {
            text-align: center;
            vertical-align: middle;
        }

    .alert {
        font-size: 16px;
    }
</style>
