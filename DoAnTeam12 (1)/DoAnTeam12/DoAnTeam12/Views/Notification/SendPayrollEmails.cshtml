@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông báo gửi email</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            background-color: white;
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        h1 {
            font-size: 1.875rem;
            font-weight: 600;
            color: #2563eb;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .alert {
            padding: 1rem;
            border-radius: 0.375rem;
            margin-bottom: 1rem;
            position: relative;
        }

        .alert-success {
            background-color: #f0fdf4;
            border-left-width: 4px;
            border-color: #16a34a;
            color: #15803d;
        }

        .alert-danger {
            background-color: #fee2e2;
            border-left-width: 4px;
            border-color: #dc2626;
            color: #b91c1c;
        }

        .text-muted {
            color: #6b7280;
        }
    </style>
</head>
<body class="bg-gray-100 p-6">
    <div class="container">
        <h1>Thông báo</h1>

        @if (ViewBag.Message != null)
        {
            <div class="alert @(ViewBag.IsSuccess == true ? "alert-success" : "alert-danger")" role="alert">
                <span class="block sm:inline">@ViewBag.Message</span>
            </div>
        }

        <div class="mt-8">
            <a href="@Url.Action("Index", "Notification")" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Trở về trang chủ
            </a>
        </div>
    </div>
</body>
</html>
