@model DoAnTeam12.Models.Account.UserModel

@{
    ViewBag.Title = "Delete Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6 font-sans antialiased">

    <div class="container mx-auto bg-white p-8 rounded-xl shadow-lg">
        <h2 class="text-3xl font-extrabold mb-6 text-gray-800 border-b pb-3 border-gray-300">Delete Account</h2>

        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline">
                    @Html.ValidationSummary(false, "", new { @class = "text-red-700" })
                </span>
            </div>
        }

        <h3 class="text-xl font-semibold text-red-700 mb-4">Are you sure you want to delete this account?</h3>

        <div class="border border-gray-300 rounded-md p-6 mb-6 space-y-4">
            <div>
                <span class="text-sm font-medium text-gray-700">ID:</span>
                <span class="text-gray-900 ml-2">@Model.Id</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Username:</span>
                <span class="text-gray-900 ml-2">@Model.UserName</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Email:</span>
                <span class="text-gray-900 ml-2">@Model.Email</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Mobile:</span>
                <span class="text-gray-900 ml-2">@Model.Mobile</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Active:</span>
                <span class="text-gray-900 ml-2">@(Model.IsActive ? "Yes" : "No")</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Remember Me:</span>
                <span class="text-gray-900 ml-2">@(Model.IsRemember ? "Yes" : "No")</span>
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700">Role:</span>
                <span class="text-gray-900 ml-2">@Model.Role</span>
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="flex items-center space-x-4">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out">
                    Delete
                </button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800 hover:underline" })
            </div>
        }
    </div>

</body>
</html>
