<body>
    <div class="container p-8 rounded-lg">
        <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Send Email</h2>

        <form action="/Gmail/Send" method="post" class="space-y-5">
            <div>
                <label for="To" class="block text-sm font-medium text-gray-700 mb-1">Recipient Email:</label>
                <input type="text" id="To" name="To" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       placeholder="e.g., recipient@example.com">
            </div>

            <div>
                <label for="Subject" class="block text-sm font-medium text-gray-700 mb-1">Subject:</label>
                <input type="text" id="Subject" name="Subject" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       placeholder="e.g., Important Announcement">
            </div>

            <div>
                <label for="Body" class="block text-sm font-medium text-gray-700 mb-1">Message Body:</label>
                <textarea id="Body" name="Body" rows="7" required
                          class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm resize-y"
                          placeholder="Type your message here..."></textarea>
            </div>

            <div>
                <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Send Email
                </button>
            </div>
        </form>
    </div>
</body>
