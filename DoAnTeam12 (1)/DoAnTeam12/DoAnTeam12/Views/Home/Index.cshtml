    <style>
        /* Bạn có thể tùy chỉnh các biến màu này */
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --success-color: #28a745;
            --info-color: #17a2b8;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --light-bg: #f8f9fa;
            --border-color: #dee2e6;
            --text-muted: #6c757d;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
            display: flex;
            min-height: 100vh;
            align-items: flex-start;
            padding: 20px;
            margin: 0;
        }

        .container {
            max-width: 3000px;
            margin: 20px auto;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            overflow-x: visible;
            margin-left: 0;
            margin-right: auto;
        }

        #announcements-column {
            background-color: #fff;
            flex: 3;
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            padding: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        #announcements {
            border: 1px solid var(--border-color);
            background-color: var(--light-bg);
            border-radius: 0.5rem;
            padding: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding-left: 20px;
        }

            #announcements h1 {
                color: var(--primary-color);
                border-bottom: 2px solid var(--primary-color);
                padding-bottom: 10px;
                margin-bottom: 20px;
                font-size: 2rem;
            }

        #report-notifications h2 {
            color: var(--success-color);
            margin-bottom: 15px;
            font-size: 1.5rem;
        }

        #report-notifications .media {
            padding: 15px 0;
            border-bottom: 1px solid var(--border-color);
            align-items: center;
            display: flex; /* Thêm display flex cho .media */
            justify-content: space-between; /* Đẩy nội dung và span ra hai đầu */
        }

            #report-notifications .media:last-child {
                border-bottom: none;
            }

        #report-notifications .media-body h5 {
            font-size: 1rem;
            margin-bottom: 5px;
            color: #343a40;
            font-weight: bold;
        }

        #report-notifications .media-body p {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin-bottom: 0;
        }

        #report-notifications .media-body h5 a {
            color: #007bff;
            text-decoration: none;
        }

            #report-notifications .media-body h5 a:hover {
                text-decoration: underline;
                color: #0056b3;
            }

        #birthday-column {
            flex: 1;
            position: sticky;
            top: 20px;
            align-self: flex-start;
            width: auto;
            margin-left: 20px;
        }

        #birthday-notifications {
            border: 1px solid var(--border-color);
            background-color: var(--light-bg);
            border-radius: 0.5rem;
            padding: 15px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            font-size: 0.9rem;
        }

            #birthday-notifications h2 {
                color: var(--info-color);
                margin-bottom: 10px;
                font-size: 1.2rem;
                border-bottom: 1px solid var(--info-color);
                padding-bottom: 5px;
            }

            #birthday-notifications .media {
                padding: 10px 0;
                border-bottom: 1px solid var(--border-color);
                align-items: center;
                display: flex; /* Thêm display flex cho .media trong birthday */
                justify-content: space-between; /* Đẩy nội dung và span ra hai đầu */
            }

                #birthday-notifications .media:last-child {
                    border-bottom: none;
                }

                #birthday-notifications .media img {
                    border-radius: 50%;
                    object-fit: cover;
                    width: 30px;
                    height: 30px;
                    margin-right: 10px;
                }

            #birthday-notifications .media-body {
                flex-grow: 1; /* Cho phần thân media-body chiếm không gian còn lại */
            }

                #birthday-notifications .media-body h5 {
                    font-size: 0.9rem;
                    margin-bottom: 3px;
                    color: #343a40;
                    font-weight: bold;
                }

                #birthday-notifications .media-body p {
                    font-size: 0.8rem;
                    color: var(--text-muted);
                    margin-bottom: 0;
                }

            #birthday-notifications .badge {
                font-size: 0.6rem;
                padding: 0.2em 0.5em;
                margin-left: 5px;
            }

        hr.my-4 {
            border-top: 1px solid var(--secondary-color);
            margin-top: 1.5rem !important;
            margin-bottom: 1.5rem !important;
        }

        .icon {
            font-size: 1rem;
            margin-right: 3px;
        }

        /* Thiết kế lại badge */
        #report-notifications .media > .badge,
        #birthday-notifications .media > .badge {
            display: inline-block; /* Đảm bảo nó là một khối inline */
            padding: 0.3em 0.8em; /* Tăng padding để nhìn rộng rãi hơn */
            font-size: 0.75rem; /* Tăng nhẹ kích thước chữ */
            font-weight: 500; /* Chữ đậm vừa phải */
            line-height: 1;
            color: #fff; /* Màu chữ trắng hoặc tùy chỉnh */
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.25rem; /* Bo tròn góc mềm mại hơn */
            margin-left: 0.5rem; /* Khoảng cách bên trái so với nội dung */
            box-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.1); /* Thêm bóng đổ nhẹ */
        }

        /* Màu sắc cụ thể cho từng trạng thái (bạn có thể tùy chỉnh) */
        #report-notifications .badge-info,
        #birthday-notifications .badge-info {
            background-color: var(--info-color);
        }

        #report-notifications .badge-success,
        #birthday-notifications .badge-success {
            background-color: var(--success-color);
        }

        #report-notifications .badge-danger,
        #birthday-notifications .badge-danger {
            background-color: var(--danger-color);
        }

        #report-notifications .badge-primary,
