        }

        #report-notifications .badge-warning,
        #birthday-notifications .badge-warning {
            background-color: var(--warning-color);
            color: #212529; /* Giữ màu chữ đen cho badge vàng */
        }

        /* Thêm một chút khoảng cách giữa badge và nội dung media-body */
        #report-notifications .media-body,
