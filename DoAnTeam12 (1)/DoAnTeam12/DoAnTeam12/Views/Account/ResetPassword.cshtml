@model DoAnTeam12.Models.Account.UserModel
@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-image: url('/image/th.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .login-container {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 40px;
            border-radius: 10px;
            width: 400px;
            max-width: 90%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .login-header h2 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 30px;
            color: #fff;
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                font-weight: bold;
                color: #eee;
                display: block;
                margin-bottom: 8px;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-primary {
            background-color: #3a5a40;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            width: 100%;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2a4a30;
            }

        .text-danger {
            color: #e63946;
            font-size: 0.9em;
            margin-top: 5px;
            display: block;
        }

        .alert {
            margin-top: 15px;
            padding: 10px;
            text-align: center;
            border-radius: 5px;
            font-weight: bold;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>RESET PASSWORD</h2>
        </div>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="form-group">
                <label for="NewPassword">New Password</label>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "****************" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "****************" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert @(ViewBag.IsSuccess != null && ViewBag.IsSuccess ? "alert-success" : "alert-danger")">
                    @ViewBag.Message
                </div>
            }
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Reset Password" />
            </div>
        }
    </div>
</body>
</html>
